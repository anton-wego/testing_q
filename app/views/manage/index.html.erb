<%= flash[:notice] if flash[:notice].present? %></td>
<table border=1>
  <tr>
    <th>Id</th>
    <th>Question</th>
    <th>Answer</th>
    <th>Action</th>
  </tr>
  <%- @quizes.each_with_index do |q, ind| -%>
  <tr>
    <td><%= q.id %></td>
    <td><p><%= q.question.html_safe %></p></td>
    <td><%= q.answer %></td>
    <td>
      <%= link_to 'Edit', edit_manage_url(q) %> | <%= link_to 'Delete', manage_url(q), method: :delete, data:{confirm:"are you sure you want to delete this review"} %> | <%= link_to 'Try quiz', quiz_url(q) %>
    </td>
  </tr>
  <%- end -%>
  <tr>
    <td colspan='4'><%= link_to 'New quiz', new_manage_path, method: :get %></td>
  </tr>
</table>
